[colors]
bg=#282A36
fg=#FFFFFF
black = #1A1D45
bblack = #2c3073
white = #D7B7BB
red = #FF4EA5
green = #7EB564
yellow = #F5B569
blue = #7A89EC
magenta = #B66CDC
cyan = #6CAC99
paleblue = #6798C1

[bar/mainbar]
background = ${colors.bg}
foreground = ${colors.fg}
font-0 = JetBrains Mono:size=10;3
font-1 = Font Awesome 5 Free Solid:size=10;3
font-2 = Sans:size=5;3
wm-restack = bspwm
height = 25

modules-left = launcher bspwm
modules-right = wtitle s network s bat s vol s date s time

[module/s]
type = custom/text
content = "%{T4}  %{T-}"
content-background = ${colors.bg}

[module/wtitle]
type = internal/xwindow
label = " %title% "
label-empty = " Interstellar "
label-maxlen = 60
label-background = ${colors.fg}
label-foreground = ${colors.bg}

[module/bspwm]
type = internal/bspwm
format = <label-state>
label-occupied-foreground = ${colors.fg}
label-focused-foreground = ${colors.bg}
label-empty-foreground = ${colors.fg}
label-occupied-background = ${colors.bg}
label-focused-background = ${colors.fg}
label-empty-background = ${colors.bg}
label-focused = "%index%"
label-occupied = "%index%"
label-empty = "%index%"
label-focused-padding = 1
label-occupied-padding = 1
label-empty-padding = 1
label-separator = "%{T4}  %{T-}"
;ws-icon-0 = 1;
;ws-icon-1 = 2;
;ws-icon-2 = 3;
;ws-icon-3 = 4;
;ws-icon-4 = 5;

[module/vol]
type = internal/pulseaudio
format-volume = <label-volume>
format-muted = <label-muted>
label-muted = "  Muted "
label-volume = "  %percentage%% "

[module/bat]
type = internal/battery
bat = BAT0
adapter = ADP0
format-charging = <label-charging>
format-discharging = <label-discharging>
label-discharging = "  %percentage%% "
label-charging = "  %percentage%% "

[module/network]
type = internal/network
interface = wlp0s20f3
label-disconnected = "  No wifi "
label-connected = "  %essid% "

[module/date]
type = internal/date
date = "  %a, %b %d "

[module/time]
type = internal/date
date = "  %H:%M:%S "
